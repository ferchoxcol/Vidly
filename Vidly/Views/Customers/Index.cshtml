@using Vidly.Models
@model  IEnumerable<Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers</h2>

@if (Model.Any())
{
    <table Class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                Customers
            </th>
            <th>
                MembershipType
            </th>
        </tr>
        </thead>
        <tbody>

        @foreach (Customer cliente in Model)
        {
            <tr>

                <td>@Html.ActionLink(cliente.Name, "Details", "Customers", new {id = cliente.Id}, null)</td>
                <td>@cliente.MembershipType.Name</td>
            </tr>
        }
        </tbody>
    </table>
}


else
{
    <p>We don't have any customer yet!</p>
}

        