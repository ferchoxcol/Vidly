@using Vidly.Models
@model IEnumerable<Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table Class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movie</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Movie movie in Model)
    {
        <tr>
            <td>
                @movie.Name
            </td>
        </tr>
    }
    </tbody>
</table>